<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEndMovile.View.User.PasswordRestore_Page"
             xmlns:component="clr-namespace:FrontEndMovile.Util.GeneralComponent"
             Title=""
             Shell.NavBarIsVisible="False"
             >
    <VerticalStackLayout 
   VerticalOptions="Center"
   Margin="50,0,50,0"
   Spacing="5"
   >


        <Image  Source="logo01"
           HorizontalOptions="Center"
           HeightRequest="80"
           WidthRequest="120"
           Margin="0,0,0,50"
           />


        <Label 
       Text="Recuperar ContraseÃ±a" 
       FontSize="Title" 
       HorizontalOptions="Start" 
       Margin="0,0,0,10"  
       />




        <component:Group_Label_Entry_LabelError_Component
         LabelText="Email"
         EntryPlaceholder="Ingrese su Email"
         EntryBinding="{Binding Email}"
         ErrorBinding="{Binding Email_Error}"
         Margin="10,0,0,0"
         x:Name="TxtEmail"
        />


        <Button
         Text="Restaurar"
         HeightRequest="50"
         FontSize="Medium"
         BackgroundColor="{DynamicResource Primary}"
         Margin="0,50,0,50"
           Command="{Binding Command_RestoreMethodCommand}"
    />


    </VerticalStackLayout>
</ContentPage>