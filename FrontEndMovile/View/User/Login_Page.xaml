<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEndMovile.View.User.Login_Page"
             xmlns:util="clr-namespace:FrontEndMovile.Util"
            
             Title="LoginPage">


    <VerticalStackLayout 
        VerticalOptions="Center"
        Margin="50,0,50,0"
        Spacing="5"
        >


        <Image  Source="logo01"
                HorizontalOptions="Center"
                HeightRequest="80"
                WidthRequest="120"
                Margin="0,0,0,100"
                />




        <Label
             Text="Tipo de documento de identidad"
            FontSize="Body"
             TextColor="{DynamicResource PrimaryDarkText}"
             HorizontalOptions="Start"
         />
        <Picker
            FontSize="Body"
            Title="Seleccione una opci칩n"
            TextColor="{DynamicResource PrimaryDark}"            
            ItemsSource="{Binding UserDocumentType_List}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding UserDocumentTypeId}  "
            Margin="10,0,0,10"
           
            />
        <Label
            Text="{Binding UserDocumentTypeId_Error}"
            FontSize="Small"
            HorizontalOptions="End"
            TextColor="{DynamicResource  Danger}"
            IsVisible="{Binding UserDocumentTypeId_Error, Converter={util:NullOrEmptyToBooleanConverter }}"
            Margin="10,0,0,0"
        />



        <Label
            Text="Numero de Documento de identidad"
            TextColor="{DynamicResource PrimaryDarkText}"
            HorizontalOptions="Start"
            />
        <Entry
            Text="{Binding UserDocumentValue}"
            TextColor="{DynamicResource PrimaryDark}"
            Placeholder="Ingrese su numero de documento de identidad"
            Margin="10,0,0,10"
            />
        <Label
             Text="{Binding UserDocumentValue_Error}"
               TextColor="{DynamicResource  Danger}"
             FontSize="Small"
             HorizontalOptions="End"
             IsVisible="{Binding UserDocumentValue_Error, Converter={util:NullOrEmptyToBooleanConverter }}"
            Margin="10,0,0,10"
         />



        <Label
             Text="Contrase침a"
             TextColor="{DynamicResource PrimaryDarkText}"             
             HorizontalOptions="Start"
         />
        <Entry
            Text="{Binding Password}"
            TextColor="{DynamicResource PrimaryDark}"
            Placeholder="Ingrese su contrase침a"
            IsPassword="True"
           Margin="10,0,0,10"
            />
        <Label
             Text="{Binding Password_Error}"
              TextColor="{DynamicResource  Danger}"
             FontSize="Small"
             HorizontalOptions="End"
             IsVisible="{Binding Password_Error, Converter={util:NullOrEmptyToBooleanConverter }}"
            Margin="10,0,0,0"
         />




        <Button
            Text="Ingresar"
            HeightRequest="50"
            FontSize="Medium"
            BackgroundColor="{DynamicResource Primary}"
            Command="{Binding Command_LoginMethodCommand}"
            Margin="0,50,0,100"
            />


        <Label
            Text="Olvido su Contrase침a"
            TextColor="{DynamicResource Secondary}"
            HorizontalOptions="Center"
            />

    </VerticalStackLayout>
</ContentPage>